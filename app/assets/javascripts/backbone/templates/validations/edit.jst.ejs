<div class="map__container">
  <div id="map"></div>

  <div class="map__disclaimer">
    <%= polyglot.t('analysis.map_disclaimer') %>
  </div>
</div>

<div id="sidebar" class="shadow simple-form">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <h1 class="admin__header">Edit validation</h1>


        <form id="edit-validation" name="validation">
          <div class="form-inputs">
            <div id="other-fields">

              <div class="control-group">
                <label class="control-label" for="habitat">
                  Habitat type
                </label>
                <div id="habitat"><%= polyglot.t('analysis.' + validation.habitat) %></div>
              </div>

              <div class="control-group density <%= validation.habitat %> show-with-mangrove show-with-seagrass show-with-saltmarsh hidden">
                <label class="control-label" for="density">Density of habitat</label>
                <div class="controls">
                  <select class="span12" name="density" id="density">
                    <option value="">Unknown</option>
                    <option value="1"<% if(1 == validation.density) { %> selected="selected"<% } %>>Sparse (<20% cover)</option>
                    <option value="2"<% if(2 == validation.density) { %> selected="selected"<% } %>>Moderate (20-50% cover)</option>
                    <option value="3"<% if(3 == validation.density) { %> selected="selected"<% } %>>Dense (50-80% cover)</option>
                    <option value="4"<% if(4 == validation.density) { %> selected="selected"<% } %>>Very dense (>80% cover)</option>
                  </select>
                </div>
              </div>

              <div class="control-group knowledge">
                <label class="control-label" for="knowledge">Evidence type</label>
                <div class="controls">
                  <select class="span12" name="knowledge" id="knowledge">
                    <option value="Underlying imagery in browser"<% if("Underlying imagery in browser" == validation.knowledge) { %> selected="selected"<% } %>>Underlying imagery in browser</option>
                    <option value="Local knowledge"<% if("Local knowledge" == validation.knowledge) { %> selected="selected"<% } %>>Local knowledge</option>
                    <option value="Field visit"<% if("Field visit" == validation.knowledge) { %> selected="selected"<% } %>>Field visit</option>
                  </select>
                </div>
              </div>

              <div class="control-group condition <%= validation.habitat %> show-with-mangrove hidden">
                <label class="control-label" for="condition">Condition</label>
                <div class="controls">
                  <select class="span12" name="condition" id="condition">
                    <option value="1"<% if(1 == validation.condition) { %> selected="selected"<% } %>>Undisturbed / Intact</option>
                    <option value="2"<% if(2 == validation.condition) { %> selected="selected"<% } %>>Degraded</option>
                    <option value="3"<% if(3 == validation.condition) { %> selected="selected"<% } %>>Restored / Rehabilitating</option>
                    <option value="4"<% if(4 == validation.condition) { %> selected="selected"<% } %>>Afforested/ Created</option>
                    <option value="5"<% if(5 == validation.condition) { %> selected="selected"<% } %>>Cleared</option>
                  </select>
                </div>
              </div>

              <div class="control-group age <%= validation.habitat %> show-with-mangrove hidden">
                <label class="control-label" for="age">Age of habitat</label>
                <div class="controls">
                  <select class="span12" name="age" id="age">
                    <option value="">Unknown</option>
                    <option value="1"<% if(1 == validation.age) { %> selected="selected"<% } %>>Natural Mangrove</option>
                    <option value="2"<% if(2 == validation.age) { %> selected="selected"<% } %>>2-10 yrs old</option>
                    <option value="3"<% if(3 == validation.age) { %> selected="selected"<% } %>>10-25 yrs old</option>
                    <option value="4"<% if(4 == validation.age) { %> selected="selected"<% } %>>25-50 yrs old</option>
                  </select>
                </div>
              </div>

              <div class="control-group species <%= validation.habitat %> show-with-seagrass hidden">
                <label class="control-label" for="species">Species</label>
                <div class="controls">
                  <select class="span12" name="species" id="species">
                    <option value="">Unknown</option>
                    <option value="Halodule uninervis"<% if("Halodule uninervis" == validation.species) { %> selected="selected"<% } %>>Halodule uninervis</option>
                    <option value="Halophila ovalis"<% if("Halophila ovalis" == validation.species) { %> selected="selected"<% } %>>Halophila ovalis</option>
                    <option value="Halophila stipulacea"<% if("Halophila stipulacea" == validation.species) { %> selected="selected"<% } %>>Halophila stipulacea</option>
                    <option value="Mixed species"><% if("Mixed species" == validation.species) { %> selected="selected"<% } %>Mixed species</option>
                  </select>
                </div>
              </div>

              <div class="control-group recorded_at">
                <label class="control-label" for="recorded_at">Recorded at</label>
                <div class="controls row-fluid">
                  <div class="span2">
                    <input class="span12" type="number" min="1" max="31" name="recorded_at(3i)" value="<%= validation["recorded_at(3i)"] %>">
                  </div>
                  <div class="span2">
                    <input class="span12" type="number" min="1" max="12" name="recorded_at(2i)" value="<%= validation["recorded_at(2i)"] %>">
                  </div>
                  <div class="span3">
                    <input class="span12" type="number" min="1970" max="2050" name="recorded_at(1i)" value="<%= validation["recorded_at(1i)"] %>">
                  </div>
                  <div class="span1">&nbsp;</div>
                  <div class="span2">
                    <input class="span12" type="number" min="0" max="23" name="recorded_at(4i)" value="<%= validation["recorded_at(4i)"] %>">
                  </div>
                  <div class="span2">
                    <input class="span12" type="number" min="0" max="59" name="recorded_at(5i)" value="<%= validation["recorded_at(5i)"] %>">
                  </div>
                </div>
              </div>

              <div class="control-group name">
                <label class="control-label" for="notes">Notes</label>
                <div class="controls">
                  <textarea class="span12" type="text" name="notes" id="notes"><%= validation.notes %></textarea>
                </div>
              </div>
            </div>

            <input class="btn btn-primary width-100-percent submit-button" type="submit" value="Save Validation" />
          </div>
        </form>
      </div>
    </div>
  </div>

  <hr>
  <p class="methodology-text">
    <%= polyglot.t('analysis.methodology_link_text') %>
  </p>
</div>
